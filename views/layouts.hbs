<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  />
  <link
    href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap"
    rel="stylesheet"
  />
  <style>
    body {
      font-family: 'MedievalSharp', cursive;
    }
  </style>
</head>
  <body class="bg-white min-h-screen flex p-4 md:p-8 gap-8">

    <!-- Fixed sidebar -->
    <aside class="fixed top-0 left-0 h-full w-64 bg-white p-4 overflow-y-auto">
      {{> sidebar }}
    </aside>

    <!-- Main content with left margin so it doesn't hide behind sidebar -->
    <main class="flex-1 ml-64 flex flex-col gap-8">

      {{> topbar page_name=title }}

      {{#if (eq currentPage "dashboard")}}
        {{> dashboard }}
      {{/if}}

      {{#if (eq currentPage "sales")}}
        {{> sales }}
      {{/if}}

      {{#if (eq currentPage "reports")}}
        {{> reports }}
      {{/if}}

      {{#if (eq currentPage "customers")}}
        {{> customers }}
      {{/if}}

      {{#if (eq currentPage "appointments")}}
        {{> appointments }}
      {{/if}}

      {{#if (eq currentPage "team")}}
        {{> team }}
      {{/if}}

      {{#if (eq currentPage "team_new")}}
        {{> newmember }}
      {{/if}}

      {{#if (eq currentPage "products")}}
        {{> products }}
      {{/if}}
    </main>

  </body>
</html>
