<section class="mx-auto mt-12 p-8 bg-[#1f1e24] border border-[#EB3170] rounded-2xl shadow-[0_0_20px_#EB3170] text-white font-sans" style="width: 60vw; max-width: 700px;">
  <h2 class="text-2xl font-bold mb-6 text-center">Profile</h2>
  <form id="profile-form" class="space-y-5">
    <div>
      <label for="first-name" class="block mb-1 font-semibold">First Name</label>
      <input type="text" id="first-name" placeholder="First Name" required
        class="w-full rounded-full px-5 py-3 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none" />
    </div>
    <div>
      <label for="last-name" class="block mb-1 font-semibold">Last Name</label>
      <input type="text" id="last-name" placeholder="Last Name" required
        class="w-full rounded-full px-5 py-3 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none" />
    </div>
    <div>
      <label for="business-name" class="block mb-1 font-semibold">Business Name</label>
      <input type="text" id="business-name" placeholder="Business Name" required
        class="w-full rounded-full px-5 py-3 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none" />
    </div>
    <div>
      <label for="business-location" class="block mb-1 font-semibold">Business Location</label>
      <input type="text" id="business-location" placeholder="Business Location" required
        class="w-full rounded-full px-5 py-3 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none" />
    </div>
    <div>
      <label for="email" class="block mb-1 font-semibold">Email ID</label>
      <input type="email" id="email" placeholder="Email ID" required
        class="w-full rounded-full px-5 py-3 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none" />
    </div>

    <div class="relative">
        <label for="password" class="block mb-1 font-semibold">Password</label>
        <input
            type="password"
            id="password"
            placeholder="Password"
            required
            class="w-full rounded-full px-5 py-3 pr-12 text-black text-sm border border-[#EB3170] shadow-[0_0_8px_#EB3170] focus:outline-none"
        />
        <button
            type="button"
            id="toggle-password"
            class="absolute right-4 top-1/2 -translate-y-1/2 text-[#EB3170] hover:text-pink-700 focus:outline-none"
            aria-label="Toggle Password Visibility"
        >
            <!-- Eye icon SVG -->
            <svg
            id="eye-icon"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-5 h-5"
            >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
            />
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
            />
            </svg>
        </button>
    </div>

    <button type="submit"
      class="w-full bg-[#EB3170] hover:bg-pink-700 py-3 rounded-full font-bold transition-colors">Update Profile</button>
  </form>
</section>

<script src="/js/profile.js"></script>
