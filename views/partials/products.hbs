<div class="flex justify-between items-center mb-6 max-w-xl w-full">
  <input type="text" id="product-search" placeholder="Search product..."
    class="flex-grow mr-4 border border-[#EB3170] rounded-full px-6 py-3 text-sm shadow-[0_0_8px_#EB3170] focus:outline-none text-black" />

  <button id="open-modal-btn" class="bg-[#EB3170] hover:bg-pink-700 text-white px-6 py-3 rounded-full font-semibold">
    Add Product
  </button>
</div>

<!-- Products Table -->
<div class="rounded-xl shadow-[0_0_20px_rgba(0,0,0,0.3)] border border-white overflow-hidden">
  <table class="w-full border-collapse text-white text-xs bg-[#3A393F]">
    <thead>
      <tr class="border-b border-white">
        <th class="px-4 py-3 text-left font-bold select-none">#</th>
        <th class="px-4 py-3 text-left font-bold select-none">PRODUCT NAME</th>
        <th class="px-4 py-3 text-left font-bold select-none">PRICE</th>
        <th class="px-4 py-3 text-left font-bold select-none">ACTIONS</th>
      </tr>
    </thead>
    <tbody id="product-table-body">
      <!-- Dynamic rows will appear here -->
    </tbody>
  </table>
</div>

<!-- Modal -->
<div id="product-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 flex">
  <div class="bg-white text-black p-6 rounded-xl shadow-[0_0_20px_#EB3170] w-full max-w-xl relative">
    <button id="close-modal-btn" class="absolute top-2 right-3 text-black text-xl font-bold">&times;</button>
    <form id="product-form">
      <input type="hidden" id="product-id" />
      <div class="mb-4">
        <label class="block font-semibold mb-2">Product Name</label>
        <input type="text" id="product-name" required
          class="w-full border border-[#EB3170] rounded-full px-6 py-3 text-sm shadow-[0_0_8px_#EB3170] focus:outline-none" />
      </div>
      <div class="mb-4">
        <label class="block font-semibold mb-2">Price (â‚¹)</label>
        <input type="number" id="product-price" required
          class="w-full border border-[#EB3170] rounded-full px-6 py-3 text-sm shadow-[0_0_8px_#EB3170] focus:outline-none" />
      </div>
      <button type="submit"
        class="bg-[#EB3170] hover:bg-pink-700 text-white px-6 py-2 rounded-full font-semibold">Save Product</button>
    </form>
  </div>
</div>

<script src="/js/products.js"></script>